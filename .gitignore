# ignore everything in the root except the "wp-content" directory.
!wp-content/

# ignore everything in the "wp-content" directory, except:
# "plugins" directory
# "themes" directory
/wp-content/upgrade/*
/wp-content/updraft/*
!/wp-content/index.php

# config files
/wp-config.php
/.htaccess

# ignore log files and databases
*.log
*.sql
*.sqlite
*.mmdb
error_log

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so
*.ftpquota

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# ignore Editor files
*.sublime-project
*.sublime-workspace
*.idea

# ignore OS generated files
ehthumbs.db
Thumbs.db

# Other
/license.txt
/readme.html
/sitemap.xml
/sitemap.xml.gz

/wp-content/uploads/essb_cache/
/wp-content/uploads/essb_cache_static/
